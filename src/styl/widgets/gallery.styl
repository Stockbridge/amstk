.gallery
  min-height: 100vh;
  width: 100%;
  margin: 0 auto;
  max-width: 120rem;
  padding: 9vh 0;
  
  .title
    text-align: center;
    margin-bottom: 9vh;
    
  .gallery-row
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-around
  
  .gallery-item
    width: 50%;
    text-align: center;
    
  .image-link
    display: block;
    background: skyblue
    height: 30px

  .client-subtitle
    color: $middleGray
    padding: 1vh 0;
    
      
    
  .row-one
    height: 40vh
  
  .row-two
    height: 40vh
    
    .item-one 
      width: 25%
    
    .item-two
      width: 75%
      
  .row-three
    height: 30vh
  
  .row-four
    height: 40vh
      
    .item-one, .item-three
      width: 25%;
    
    .item-two
      width: 50%;
    