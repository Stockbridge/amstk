// alignment styles and images for the main gallery
#gallery-main
  .gallery-row
    padding: 0
  
  .row-two, .row-four
    align-items: stretch;

  .row-two
    .item-one 
      flex-grow: 2;

    .item-two
      flex-grow: 5;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    
    .link-one
      flex-grow: 5;
    
    .client-logo-container
      flex-grow: 1;
    
    .link-two
      width: 100%;
  
  .row-three
    .client-logo-container
      padding-top: 3vh;

  .row-four
    .item-one
      .client-logo-container
        padding: 2.5vh 1vw;
        
    .item-two
      flex-grow: 2;
      width: 50%;
    
    .item-three
      .client-logo-container
        padding: 11vh 1vw;

